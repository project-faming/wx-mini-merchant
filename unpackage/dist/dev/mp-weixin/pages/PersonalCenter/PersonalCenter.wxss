.user .header {
  padding: 0 40rpx;
  position: relative;
  background-color: #85c43f;
}
.user .header .picTxt {
  padding-top: 40rpx;
}
.user .header .picTxt .pictrue {
  width: 120rpx;
  height: 120rpx;
  float: left;
  border-radius: 50%;
  border: 2px solid #f5f5f5;
  overflow: hidden;
}
.user .header .picTxt .pictrue .imagedata {
  width: 100%;
  height: 100%;
}
.user .header .picTxt .text {
  float: left;
  width: calc(100% - 162rpx);
  color: #ffffff;
  margin-left: 35rpx;
}
.user .header .picTxt .text .name {
  color: #fff;
  font-size: 28rpx;
  max-width: 470rpx;
}
.user .header .picTxt .text .id {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-top: 6rpx;
}
.user .header .picTxt::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.user .header::after {
  content: '';
  height: 100rpx;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #85c43f;
  position: absolute;
  left: 0;
  right: 0;
  z-index: -1;
}
.user .qrcode_shop {
  margin-top: 120rpx;
}
.user .qrcode_shop .title_font {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #666666;
}
.user .qrcode_shop .qrcode_img_view {
  margin-top: 40rpx;
  padding: 0 80rpx;
}
.user .qrcode_shop .qrcode_img_view .qrcode_img {
  border: 2rpx solid #EEEEEE;
  border-radius: 6rpx;
  width: 100%;
  overflow: hidden;
}
.user .qrcode_shop .qrcode_img_view .qrcode_img ._img {
  width: 100%;
}
.user .qrcode_shop .qrcode_img_view .purple_btn {
  width: 100%;
  border: 2rpx solid #85c43f;
  background: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #85c43f;
  margin-top: 20rpx;
}

