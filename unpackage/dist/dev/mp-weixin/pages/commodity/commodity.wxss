.chieflist_class {
  padding: 40rpx;
}
.chieflist_class .default_class {
  text-align: center;
  padding-top: 40rpx;
}
.chieflist_class .default_class ._img {
  width: 320rpx;
  height: 320rpx;
}
.chieflist_class .default_class ._span {
  font-size: 28rpx;
  color: #999999;
  font-weight: bold;
  margin-top: 20rpx;
  display: block;
}
.chieflist_class .list_table_div .tablelist_div {
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
  padding-bottom: 20rpx;
  overflow: hidden;
}
.chieflist_class .list_table_div .tablelist_div .img_userimg {
  width: 220rpx;
  height: 220rpx;
  float: left;
  margin-right: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}
.chieflist_class .list_table_div .tablelist_div .img_userimg ._img {
  width: 100%;
  height: 100%;
}
.chieflist_class .list_table_div .tablelist_div .right_text {
  float: left;
  width: calc(100% - 245rpx);
  height: 220rpx;
}
.chieflist_class .list_table_div .tablelist_div .right_text .name_text {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  font-weight: bold;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.chieflist_class .list_table_div .tablelist_div .right_text .text_jianjie {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.chieflist_class .list_table_div .tablelist_div .right_text .originalprice {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #C0C0C0;
}
.chieflist_class .list_table_div .tablelist_div .right_text .presentprice {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #ee0a24;
}
.chieflist_class .list_table_div .tablelist_div .right_text .status_text {
  font-size: 28rpx;
  display: block;
  color: #666666;
  margin-top: 5rpx;
}
.chieflist_class .list_table_div .tablelist_div .postion_button {
  text-align: right;
}
.chieflist_class .list_table_div .tablelist_div .postion_button .buttonrout {
  margin-left: 20rpx;
}
.chieflist_class .list_table_div .tablelist_div:last-child {
  border: none;
}
.chieflist_class .buttonrightpost {
  position: fixed;
  bottom: 50rpx;
  left: 20rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.2);
  background: #85c43f;
  border: none;
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
  color: #fff;
  line-height: 100rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-align: center;
}

