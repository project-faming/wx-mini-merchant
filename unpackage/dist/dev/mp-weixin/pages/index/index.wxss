.content_index {
  padding: 80rpx;
}
.content_index .nav-area__item {
  width: 250rpx;
  height: 250rpx;
  border: 1rpx solid #85c43f;
  border-radius: 10rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.content_index .nav-area__item ._img {
  margin-top: 50rpx;
  width: 100rpx;
  height: 100rpx;
}
.content_index .nav-area__item ._span {
  display: block;
  font-size: 24rpx;
  color: #85c43f;
  font-weight: bold;
}
.content_index .leftclass {
  float: left;
}
.content_index .rightclass {
  float: right;
}

